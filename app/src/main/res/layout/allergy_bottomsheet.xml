<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/allergy_bottomsheet_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bug_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/circle_pink_bg"
            android:padding="18dp"
            android:src="@drawable/ic_bug_report_black_24dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/allergy_name_bottom"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/textbox_background"
            android:fontFamily="@font/product_sans_font"
            android:hint="Allergy Name"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/bug_img"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/allergy_side_effects_bottom"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/textbox_background"
            android:fontFamily="@font/product_sans_font"
            android:hint="Side Effects to you"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/allergy_name"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/allergy_submit_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/allergy_side_effects"
            android:layout_alignEnd="@+id/allergy_side_effects"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/circular_light_pink_bg"
            android:elevation="0dp"
            android:fontFamily="@font/product_sans_font"
            android:text="Add Allergy"
            android:textAllCaps="false"
            android:textColor="@color/pink"
            android:textSize="16sp"
            android:layout_marginBottom="40dp"/>

    </RelativeLayout>

</LinearLayout>